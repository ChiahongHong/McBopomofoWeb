{
  "name": "小麥注音輸入法",
  "description": "在瀏覽器當中使用的小麥注音輸入法",
  "version": "1.0",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js",
     "type": "module"
  },
  "content_scripts": [ {
    "all_frames": true,
    "js": [ "content.js" ],
    "css": [ "content.css" ],
    "matches": [ "http://*/*", "https://*/*" ]
  } ],
  "permissions": [
    "tabs",
    "storage",
    "alarms"
  ],
  "action": {
    "default_popup": "popup.html"
  }
}
